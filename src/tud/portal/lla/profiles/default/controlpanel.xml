<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="tud.portal.lla"
    purge="False">

    <!-- Register newsletter settings -->
    <configlet
        title="Newsletter Settings"
        action_id="tud.portal.lla.newslettersettings"
        appId="tud.portal.lla"
        category="plone-general"
        condition_expr=""
        url_expr="string:${portal_url}/@@newsletter-settings"
        icon_expr="string:$portal_url/mail_icon.png"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
